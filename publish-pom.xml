<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.opt</groupId>
  <artifactId>dob</artifactId>
  <version>1.0</version>

  <description>
  	For installing the JAR's to the repository
  </description>
   
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <executions>
          
        <execution>
                        <id>deploy-1</id>
                        <phase>package</phase>
                        <goals>
                            <goal>deploy-file</goal>
                        </goals>
                        <configuration>
                            <file>/tmp/dotoolkit/test-dot-target-source/lib/activation.jar</file>
                            <groupId>com.opt</groupId>
                            <artifactId>activation</artifactId>
                            <version>1.0</version>
                            <packaging>jar</packaging>
                            <repositoryId>server-manager</repositoryId>
                            <url>file:///tmp/dob/maven-repo/</url>
                        </configuration>
                    </execution>
                    <execution>
                        <id>deploy-2</id>
                        <phase>package</phase>
                        <goals>
                            <goal>deploy-file</goal>
                        </goals>
                        <configuration>
                            <file>/tmp/dotoolkit/test-dot-target-source/lib/javafx-ui-common.jar</file>
                            <groupId>com.opt</groupId>
                            <artifactId>javafx-ui-common</artifactId>
                            <version>1.0</version>
                            <packaging>jar</packaging>
                            <repositoryId>server-manager</repositoryId>
                            <url>file:///tmp/dob/maven-repo/</url>
                        </configuration>
                    </execution>
                </executions>
      </plugin>
    </plugins>
	<extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ssh</artifactId>
        <version>3.1.0</version>
      </extension>
    </extensions>
  </build>

</project>
